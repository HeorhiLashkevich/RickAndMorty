<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/const_character_name"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_36"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/character_name"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_36"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/const_character_name"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/const_character_species"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_36"
        android:text="@string/species"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/const_character_name">

    </TextView>

    <TextView
        android:id="@+id/character_species"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_36"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/const_character_species"
        app:layout_constraintTop_toBottomOf="@+id/character_name">


    </TextView>

    <TextView
        android:id="@+id/const_character_status"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_36"
        android:text="@string/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_species">

    </TextView>

    <TextView
        android:id="@+id/character_status"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_36"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/const_character_status"
        app:layout_constraintTop_toBottomOf="@+id/character_species">

    </TextView>


    <TextView
        android:id="@+id/const_character_gender"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_36"
        android:text="@string/gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/const_character_status">

    </TextView>


    <TextView
        android:id="@+id/character_gender"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_36"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/const_character_gender"
        app:layout_constraintTop_toBottomOf="@+id/character_status">

    </TextView>

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:adjustViewBounds="true"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/character_gender">


    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>