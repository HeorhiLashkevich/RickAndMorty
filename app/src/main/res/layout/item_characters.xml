<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/const_character_name"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_36"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/const_character_species"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_36"
        android:text="@string/species"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/const_character_name">

    </TextView>

    <TextView
        android:id="@+id/const_character_status"

        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_36"
        android:text="@string/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/const_character_species">

    </TextView>

    <TextView
        android:id="@+id/const_character_gender"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_36"
        android:text="@string/gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/const_character_status">

    </TextView>


    <TextView
        android:id="@+id/character_name"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_36"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/const_character_name"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/character_species"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_36"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/const_character_species"
        app:layout_constraintTop_toBottomOf="@id/character_name">

    </TextView>

    <TextView
        android:id="@+id/character_status"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_36"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/const_character_species"
        app:layout_constraintTop_toBottomOf="@id/character_species">

    </TextView>

    <TextView
        android:id="@+id/character_gender"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_36"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/const_character_gender"
        app:layout_constraintTop_toBottomOf="@id/character_status">

    </TextView>

        <ImageView
            android:id="@+id/character_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_140"
            android:adjustViewBounds="true"
            app:layout_constraintDimensionRatio="1:1"
            android:textColor="@color/purple_200"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>





</androidx.constraintlayout.widget.ConstraintLayout>